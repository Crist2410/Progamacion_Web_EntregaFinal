@model Fit_Center.Models.Class

@{
    ViewData["Title"] = "Crear Clase";
}

<h1>Crear una nueva clase</h1>

<hr />

<div class="row">
    <div class="col-lg-4">
        <div class="left-content">
            <div class="inner-content">
                <hr />
                <h4 class="display-4">@UserSingleton.Instance.User.FirstName @UserSingleton.Instance.User.LastName</h4>
                <hr />
                <h5>Bienvenido a FIT CENTER</h5>
                <hr />
                <h6>Ingrese los datos de la Clase que desa Crear</h6>
                <hr />
            </div>
        </div>
    </div>
    <div class="col-lg-8">
            <div class="main-banner header-text">
                <div class="Modern-Slider">
                    <div class="item">
                        <div class="img-fill">
                        <form asp-action="Create" class="calendar-form" style="margin: 5%;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ClassName" class="control-label" style=" color: white;">Nombre de la Clase</label>
                                <input asp-for="ClassName" class="form-control calendar-input" />
                                <span asp-validation-for="ClassName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ClassDescription" class="control-label" style=" color: white;">Descripción</label>
                                <input asp-for="ClassDescription" class="form-control calendar-input" />
                                <span asp-validation-for="ClassDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label" style=" color: white;">Fecha Inicio</label>
                                <input asp-for="StartDate" class="form-control calendar-input" type="date" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label" style=" color: white;">Fecha Fin</label>
                                <input asp-for="EndDate" class="form-control calendar-input" type="date" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartTime" class="control-label" style=" color: white;">Hora Inicio</label>
                                <input asp-for="StartTime" class="form-control calendar-input" type="time" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndTime" class="control-label" style=" color: white;">Hora Fin</label>
                                <input asp-for="EndTime" class="form-control calendar-input" type="time" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Location" class="control-label" style=" color: white;">Ubicación</label>
                                <input asp-for="Location" class="form-control calendar-input" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                            <hr />
                            <div class="form-group">
                                <input type="submit" value="Crear" class="btn btn-light" />
                            </div>
                            <hr />
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
